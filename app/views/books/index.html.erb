<h2>Books</h2>

 <H4>Title</H4>
 <H4>Body</H4>
 
<% @books.each do |book| %>
     <span><%= book.title %></span>
     <span><%= book.body %></span>
     <%= link_to "Show", "/books/#{book.id}" %>
     <%= link_to "Edit", "/books/#{book.id}/edit" %>
     <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
<% end %>

<h3>New book</h3>
<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>